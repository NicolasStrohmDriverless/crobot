<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <com.crobot.game.GameView
        android:id="@+id/platformer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Platformer surface" />

    <LinearLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.ProgressBar.Large" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Loading level..."
            android:textColor="#FFFFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_left"
                android:layout_width="96dp"
                android:layout_height="72dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_control_button_selector"
                android:minHeight="64dp"
                android:minWidth="64dp"
                android:text="RUN"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:icon="@drawable/ic_run_left"
                app:iconGravity="textTop"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_right"
                android:layout_width="96dp"
                android:layout_height="72dp"
                android:background="@drawable/bg_control_button_selector"
                android:minHeight="64dp"
                android:minWidth="64dp"
                android:text="RUN"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:icon="@drawable/ic_run_right"
                app:iconGravity="textTop"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_jump"
                android:layout_width="120dp"
                android:layout_height="72dp"
                android:background="@drawable/bg_control_button_selector"
                android:layout_marginEnd="8dp"
                android:minHeight="64dp"
                android:minWidth="64dp"
                android:text="JUMP"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:icon="@drawable/ic_jump"
                app:iconGravity="textTop"
                app:iconPadding="6dp"
                app:iconTint="@android:color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_duck"
                android:layout_width="120dp"
                android:layout_height="72dp"
                android:background="@drawable/bg_control_button_selector"
                android:minHeight="64dp"
                android:minWidth="64dp"
                android:text="CROUCH"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:icon="@drawable/ic_duck"
                app:iconGravity="textTop"
                app:iconPadding="6dp"
                app:iconTint="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
